<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_date_header"
        android:textAlignment="center"
        android:background="#FF9900"
        android:textSize="22sp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFFFFF"
        android:calendarTextColor="#FF9900"
        android:datePickerMode="calendar"
        android:foregroundGravity="center"
        android:headerBackground="#FF9900"
        android:textAlignment="center"
        android:windowSoftInputMode="stateVisible|adjustResize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextShiftOvertime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/calc_button"
            android:ems="10"
            android:hint="Overtime"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextShiftNightHour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/calc_button"
            android:ems="10"
            android:hint="Night Hour"
            android:textAlignment="center" />
    </LinearLayout>
    <Button
        android:id="@+id/buttonAddShift"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/calc_button"
        android:text="@string/btn_add_shift" />
    <Button
        android:id="@+id/buttonDB"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/calc_button"
        android:text="Delete shift" />


</LinearLayout>